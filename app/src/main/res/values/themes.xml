<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsRecap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsRecap.NoActonBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextNewsItemTitle">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_bold_italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNewsItemDescription">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>